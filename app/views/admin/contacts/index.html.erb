<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Contacts</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="<%= admin_categories_url %>">Home</a></li>
                <li class="breadcrumb-item active">Contacts</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header p-0 pt-1">
                        <%# <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                        <li class="pt-2 px-3">abc</li>
                        </ul> %>
                    </div>
                    <div class="card-body">

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="example1">
                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Message</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

								<tbody>
									<% if @contacts.present? %>
										<% @contacts.each do |data| %>
											<tr>
												<td><%= data.first_name %></td>
												<td><%= data.last_name %></td>
												<td><%= data.email %></td>
												<td><%= data.mobile %></td>
												<td><%= data.message %></td>
												<td>
													<% if can? :update, @contacts %>
														<%= link_to edit_admin_category_path(data), class: 'btn btn-primary mr-3', title: "Edit category" do %>
															<i class="fa fa-edit "></i>
														<% end %>
													<% end %>
													<% if can? :destroy, @contacts %>
														<button class="btn btn-danger mr-3 delete-record" data-id="<%= data.id %>">
															<i class="fa fa-trash"></i>
														</button>
													<% end %>
												</td>
											</tr>
										<% end %>
									<% else %>
										<tr>
											<td colspan="6" style="text-align: center;">
												No records found!
											</td>
										</tr>
									<% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete <i class="fa fa-trash"></i></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this record?</p>
                </div>
                <div class="modal-footer">
                    <input type="number" id="delete_id" name="delete_id" hidden>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary confirm-delete">Delete</button>
                </div>
            </div>
        </div>
    </div>

</section>

<script>
	$(document).ready(function() {

		$('.delete-record').click(function () {
            var recordId = $(this).data('id');
            $('#deleteModel').modal('show');

            $('.confirm-delete').click(function () {
                $('#deleteModel').modal('hide');
                var csrfToken = $('meta[name=csrf-token]').attr('content');

                $.ajax({
                    url: '/admin/contacts/' + recordId,
                    headers: {
                        'X-CSRF-Token': csrfToken
                    },
                    method: 'DELETE',
                    success: function() {
                        location.reload();
                    }
                });
            });
		});
	});
</script>
