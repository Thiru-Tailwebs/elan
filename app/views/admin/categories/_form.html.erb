<%= form_with(model: [:admin, @category], html: { multipart: true, class: 'form-horizontal' }) do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <div class="form-group row">
      <%= form.label "Image*", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <% if controller.action_name == 'new' %>
          <%= form.file_field :image, class: 'form-control', accept:'image/*', multiple: "multiple", required: "required", name: "category[image]" %>
        <% else %>
          <%= form.file_field :image, class: 'form-control', multiple: "multiple", accept:'image/*', name: "category[image]" %>
        <% end %>
        <p><strong>Note: </strong> We accept 2028 × 792 dimation image.</p>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label "Image2*", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <% if controller.action_name == 'new' %>
          <%= form.file_field :image2, class: 'form-control', accept:'image/*', multiple: "multiple", required: "required", name: "category[image2]" %>
        <% else %>
          <%= form.file_field :image2, class: 'form-control', multiple: "multiple", accept:'image/*', name: "category[image2]" %>
        <% end %>
        <p><strong>Note: </strong> We accept 1010 × 792 dimation image.</p>
      </div>
    </div>
    <div class="form-group row">
      <%= form.label :name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-4">
        <%= form.text_field :name, class: 'form-control', placeholder: "Enter name" %>
      </div>
      <%= form.label "Active*", class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-4">
        <select class="select2 form-control" data-placeholder="Select role" style="width: 100%;" name="category[active]" id="category_active" required>
          <option value="true" <% if @category.active == true %> selected <% end %>>True</option>
          <option value="false" <% if @category.active == false %> selected <% end %>>False</option>
        </select>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= form.submit nil, class: 'btn btn-primary' %>
    <a href="<%= admin_categories_url %>" class="btn btn-default">Back</a>
  </div>
<% end %>
