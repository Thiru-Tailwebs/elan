<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Category Images</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="<%= admin_category_images_url %>">Dashboard</a></li>
                <li class="breadcrumb-item active">Category Images</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header p-0 pt-1">
                        <%# <ul class="nav nav-tabs" id="custom-tabs-two-tab" role="tablist">
                        <li class="pt-2 px-3">abc</li>
                        </ul> %>
                    </div>
                    <div class="card-body">
                        <% if can? :create, @category_image %>
                            <div class="mb-3">
                                <a href="<%= new_admin_category_image_path %>" class="btn btn-primary mr-3">
                                    <i class="fa fa-plus">&nbsp;</i>Add Record
                                </a>
                            </div>
                        <% end %>

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="example1">
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Image</th>
                                        <th>View Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <% @category_images.each do |data| %>
                                        <tr>
                                            <td><%= data.category.name %></td>
                                            <td>
                                                <% if data.image.present? %>
                                                    <%= image_tag data.image_url, height: "80px", width: "150px" %> 
                                                <% else %>
                                                    <img src="/images/user_avtar.png" alt="Not found!" height="80px" width="80px">
                                                <% end %>
                                            </td>
                                            <td><a href="<%= data.image_url %>" class="btn btn-info" target="_blank"><i class="fa fa-eye" aria-hidden="true"></i></a></td>
                                            <td>
                                                <% if can? :destroy, @category_images %>
                                                    <button class="btn btn-danger mr-3 delete-record" data-id="<%= data.id %>">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                <% end %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete <i class="fa fa-trash"></i></h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="related-data-div">
                        <p><b>NOTE: </b>Listed below are the categories that <strong id="person-name-strong"></strong> is linked to:</p>
                        <ul id="related-data-ul">
                        </ul>
                    </div>
                    <p>Are you sure you want to delete this record?</p>
                </div>
                <div class="modal-footer">
                    <input type="number" id="delete_id" name="delete_id" hidden>
                    <button type="submit" class="btn btn-danger" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary confirm-delete">Delete</button>
                </div>
            </div>
        </div>
    </div>

</section>

<script>
	$(document).ready(function() {
        document.getElementById('related-data-div').style.display = 'none';

		$('.delete-record').click(function () {
            var recordId = $(this).data('id');
            $('#deleteModel').modal('show');

            $('.confirm-delete').click(function () {
                $('#deleteModel').modal('hide');
                var csrfToken = $('meta[name=csrf-token]').attr('content');

                $.ajax({
                    url: '/admin/category_images/' + recordId,
                    headers: {
                        'X-CSRF-Token': csrfToken
                    },
                    method: 'DELETE',
                    success: function() {
                        location.reload();
                    }
                });
            });
		});
	});
</script>
