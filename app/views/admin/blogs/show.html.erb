<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header p-0 pt-1"></div>
                    <div class="card-body">
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Image:</label>
                        <div class="col-sm-10">
                          <% if @blog.image.present? %>
                            <%= image_tag @blog.image_url, height: "70px", width: "100px" %>
                          <% end %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Title:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.title %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Name:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.name %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Small Description:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.description1 %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Status:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.state %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Published Date:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.published_dt %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Is Featured:</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" disabled value="<%= @blog.is_featured %>">
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Author:</label>
                        <div class="col-sm-10">
                          <% if @blog.author.present? %>
                            <input type="text" class="form-control" disabled value="<%= @blog.author.name %>">
                          <% end %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Blog Types:</label>
                        <div class="col-sm-10">
                          <% if @blog.author.present? %>
                            <input type="text" class="form-control" disabled value="<%= @blog.blog_types.pluck(:name).join(', ') %>">
                          <% end %>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Main Description:</label>
                        <div class="col-sm-10">
                          <% if @blog.description2.present? %>
                            <%= @blog.description2.html_safe %>
                          <% else %>
                            <%= @blog.description2 %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer">
                      <% if @blog.draft? %>
                        <%= form_with(model: @blog, url: publish_admin_blog_path(@blog), method: :put) do |form| %>
                          <%= form.submit 'Publish', class: 'btn btn-primary float-left mr-3' %>
                        <% end %>
                      <% end %>
                      <a href="<%= admin_blogs_url %>" class="btn btn-info">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
