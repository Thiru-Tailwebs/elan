<section class="black-bg-4 py-50">
  <div class="container">
    <div class="heading-1 fs-35 fs-25-mob" data-aos="fade-up">
      Request a call back
    </div>

    <div class="mt-80 mt-30-mob">
      <div class="call">
        <form id="myCall" class="call-back mt-50 mt-20-mob row align-items-center">
          <div class="col-md-3" data-aos="fade-up">
            <label for="firstName">Your Name</label>
            <input type="text" id="firstName" required>
          </div>
          <div class="col-md-3 mt-20-mob" data-aos="fade-up">
            <label for="email">E-Mail</label>
            <input type="email" id="email" required>
          </div>
          <div class="col-md-3 mt-20-mob" data-aos="fade-up">
            <label for="email">Phone Number</label>
            <input type="email" id="email" required>
          </div>
          <div class="col-md-3 mt-20-mob text-center">
            <div class="" data-aos="fade-up">
              <button type="button" class="btn btn-4">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<div id="myModal" class="modal">
  <div class="modal-content">
    <div class="para-1">Thank you for your Interest</div>
    <div class="para-2">Will get back to you shortly.</div>
    <a type="button" class="close-btn" id="closeModal">ok</a>
  </div>
</div>

<style>
  .call form {
    width: 100%;
  }

  .call-back label,
  input {
    display: block;
    margin-bottom: 5px;
  }

  .call-back label {
    color: #FFF;
    font-family: 'Jost', sans-serif;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: capitalize;
  }

  .call-back input {
    width: 100%;
    padding: 5px;
    border: none;
    border-bottom: 1px solid #8D8D8D;
    background-color: #1E1E1E;
    color: #FFF;
  }

  /* Remove the default input focus outline */
  .call-back input:focus {
    outline: none;
  }

  @media (max-width: 768px) {
    .call-back label{
      font-size: 16px;
    }
  }
</style>

<script>
  // Get the modal and the button to close it
  var modal = document.getElementById("myModal");
  var closeModal = document.getElementById("closeModal");

  // Get the submit button
  var submitButton = document.querySelector(".btn.btn-4");

  // When the submit button is clicked, show the modal
  submitButton.addEventListener("click", function () {
    modal.style.display = "block";
  });

  // When the close button is clicked, hide the modal
  closeModal.addEventListener("click", function () {
    modal.style.display = "none";
  });

  // Close the modal if the user clicks outside of it
  window.addEventListener("click", function (event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  });
</script>

