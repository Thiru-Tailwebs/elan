    }

    .container-n.right .icon {
      left: -19px;
      position: absolute;
      z-index: 1;
    }

    .container-n .content {
      padding: 30px 90px 30px 30px;
      position: relative;
      border-radius: 0 500px 500px 0;
    }

    .container-n.right .content {
      padding: 10px 10px 10px 90px;
      border-radius: 500px 0 0 500px;
    }

    .container-n .content h2 {
      margin: 0 0 10px 0;
      font-size: 18px;
      font-weight: normal;
      color: #006E51;
    }

    .container-n .content p {
      margin: 0;
      font-size: 16px;
      line-height: 22px;
      color: #000000;
    }

    @media (max-width: 767.98px) {
      .timeline::after {
        left: 90px;
      }

      .container-n {
        width: 100%;
        padding-left: 120px;
        padding-right: 30px;
      }

      .container-n.right {
        left: 0%;
      }

      .container-n.left::after,
      .container-n.right::after {
        left: 82px;
      }

      .container-n.left::before,
      .container-n.right::before {
        left: 100px;
        border-color: transparent #006E51 transparent transparent;
      }

      .container-n.left .date,
      .container-n.right .date {
        right: auto;
        left: 15px;
      }

      .container-n.left .icon,
      .container-n.right .icon {
        right: auto;
        left: 146px;
      }

      .container-n.left .content,
