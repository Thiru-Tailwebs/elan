  <style>
    .timeline {
      position: relative;
      width: 100%;
      max-width: 1140px;
      margin: 0 auto;
      padding: 15px 0;
    }

    .timeline::after {
      content: '';
      position: absolute;
      width: 2px;
      background: #A7833D;
      top: 0;
      bottom: 0;
      left: 50%;
      margin-left: -1px;
    }

    .container-n {
      padding: 15px 30px;
      position: relative;
      background: inherit;
      width: 50%;
    }

    .container-n.left {
      left: 0;
    }

    .container-n.right {
      left: 50%;
    }

    .container-n::after {
      content: none;
      position: absolute;
      width: 16px;
      height: 16px;
      top: calc(50% - 8px);
      right: -8px;
      background: #ffffff;
      border: 2px solid #A7833D;
      border-radius: 16px;
      z-index: 1;
    }

    .container-n .icon img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
    }

    .container-n.right::after {
      left: -8px;
    }

    .container-n::before {
      content: '';
      position: absolute;
      width: 50px;
      height: 2px;
      top: calc(50% - 1px);
      right: 8px;
      /* background: #006E51; */
      border: 1px dashed #A7833D;
      z-index: 1;
    }

    .container-n.right::before {
      left: 8px;
    }

    .container-n .date {
      position: absolute;
      display: inline-block;
      top: calc(50% - 8px);
      text-align: center;
      font-size: 14px;
      font-weight: bold;
      color: #006E51;
      text-transform: uppercase;
      letter-spacing: 1px;
      z-index: 1;
    }

    .container-n.left .date {
      right: -75px;
    }

    .container-n.right .date {
      left: -75px;
    }

